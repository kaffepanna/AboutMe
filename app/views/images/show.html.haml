-content_for :sub_menu do
  %ul
    %li=link_to 'Edit', edit_image_path(@image)
    %li=link_to 'Rotate', rotate_image_path(@image)
    %li=link_to 'Delete', @image, confirm: 'Are you sure?', method: :delete


%figure.full
  =image_tag(original_image_path(@image))
  %figcaption=@image.caption
.tags
  -@image.tags.each do |tag|
    =link_to tag.name, tag
.controls
   
